<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Contact_us_Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/my_profile_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTACT US"
            android:textSize="20dp"
            android:textColor="@color/grey"
            android:layout_marginTop="20dp"
            android:gravity="center"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/contact_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_below="@id/my_profile_tv"
            android:layout_margin="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/contact_call"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/contact_call_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_toEndOf="@id/contact_call_image"
                        android:layout_marginStart="20dp"
                        android:text="Call us"/>

                    <Button
                        android:id="@+id/btn_call"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:textColor="@color/pink"
                        android:text="Call"/>


                </RelativeLayout>
                <View
                    android:id="@+id/view_line1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/lightgrey"
                    android:layout_below="@id/contact_call"/>

                <RelativeLayout
                    android:id="@+id/contact_whatsapp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_below="@id/view_line1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/contact_whatsapp_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/contact_whatsapp_image"
                        android:text="WhatsApp"/>

                    <Button
                        android:id="@+id/btn_whatsapp"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:textColor="@color/pink"
                        android:text="Chat"/>


                </RelativeLayout>
                <View
                    android:id="@+id/view_line2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/lightgrey"
                    android:layout_below="@id/contact_whatsapp"/>

                <RelativeLayout
                    android:id="@+id/contact_live"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_below="@id/view_line2"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/contact_live_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/contact_live_image"
                        android:text="Live Chat 24*7"/>

                    <Button
                        android:id="@+id/btn_live"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="35dp"
                        android:layout_gravity="center"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/pink"
                        android:text="Chat"/>


                </RelativeLayout>
                <View
                    android:id="@+id/view_line3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/lightgrey"
                    android:layout_below="@id/contact_live"/>



                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_below="@id/contact_live"/>

                <EditText
                    android:id="@+id/contact_name_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:hint="Your Name"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"/>

                <TextView
                    android:id="@+id/tv_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contact_name_edt"
                    android:text="Country"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/contact_country_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_country"
                    android:hint="India"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"/>

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contact_country_edt"
                    android:text="Email"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/contact_email_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_email"
                    android:hint="Your Email"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"/>

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contact_email_edt"
                    android:text="Phone"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/contact_phone_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_phone"
                    android:hint="Your Phone"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"/>

                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contact_phone_edt"
                    android:text="Message"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/contact_message_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_message"
                    android:hint="Your Message"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"/>


                <Button
                    android:id="@+id/btn_contact_submit"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="SUBMIT"
                    android:background="@drawable/pink_btn"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/contact_message_edt"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_contact_submit"
                    android:layout_marginTop="20dp"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>