<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Profile_info_Fragment">

    <TextView
        android:id="@+id/my_profile_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MY PROFILE"
        android:textSize="20dp"
        android:textColor="@color/grey"
        android:layout_marginTop="20dp"
        android:gravity="center"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/address_card"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/my_profile_tv"
        android:layout_margin="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/profile_name_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:hint="Dummy"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/tv_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_name_edt"
                android:text="Last Name"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/profile_last_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_last_name"
                android:hint="Dummy"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_last_edt"
                android:text="Mobile"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/profile_mobile_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_mobile"
                android:hint="Dummy"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_mobile_edt"
                android:text="Email"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/profile_email_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_email"
                android:hint="Dummy"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/tv_change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_email_edt"
                android:text="Change Password"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/pink"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/btn_save_address"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="SAVE DETAILS"
                android:background="@drawable/pink_btn"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_change_password"
                android:layout_marginTop="30dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>